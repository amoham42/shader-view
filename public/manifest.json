{
    "manifest_version": 3,
    "name": "Shadertoy New Tab",
    "version": "1.0",
    "description": "Display random Shadertoy shaders on new tabs",
    "icons": {
        "16": "shader_view_icon.ico",
        "48": "shader_view_icon.ico",
        "128": "shader_view_icon.ico"
    },
    "permissions": [
        "tabs",
        "storage"
    ],
    "host_permissions": [
        "*://www.shadertoy.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "chrome_url_overrides": {
        "newtab": "index.html"
    }
   
}