{
    "manifest_version": 3,
    "name": "Shadertoy New Tab",
    "version": "1.0",
    "description": "Display random Shadertoy shaders on new tabs",
    "icons": {
        "16": "icons/shader_view_icon.ico",
        "48": "icons/shader_view_icon.ico",
        "128": "icons/shader_view_icon.ico"
    },
    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "https://www.shadertoy.com/*"
    ],
    "chrome_url_overrides": {
        "newtab": "index.html"
    }
}